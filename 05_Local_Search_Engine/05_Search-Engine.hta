  <!-- Escape to Quit-->
  <script language="VBScript">
    Sub Document_OnKeyUp()
      intKeyCode = Window.Event.Keycode
      If intKeyCode = 27 Then Window.Close
    End Sub

    Sub Window_onLoad
      window.resizeTo 482, 365
      document.title = document.title & ",  Version " & GlgC.Version
    End Sub
  </script>
</head>

<!-- Stolen from codemmandos.com: -->
  <style>
    .accentColor {
      color: #FFC940;
    }

    .primaryColor {
      color: #FFFFFF;
    }
  </style>

<body scroll="no" style="text-align:center;" bgcolor="black">
    <h1> <span class="accentColor">CODE</span><span class="primaryColor">MMANDOS</span></h1>

    <h3><span class="primaryColor">When you click a button it will change the text of sample paragraph.</span></h3>

    <h3><span class="primaryColor">
      <p id="demo"> <!-- [1] -->
        I am sample paragraph.
      </p>
    </span></h3>
    
    <button onclick="sayHello()">Click me</button>

  </body>
</html>

<script language="JavaScript">
  function change_text(target, message){
      document.getElementById(target).innerHTML = message;
  }

  function sayHello(){ //<!-- [2] -->
    change_text("demo","You clicked the button, I am new paragraph.")
  }

</script>

